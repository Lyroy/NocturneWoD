+                  </Table.Row>
+                ))}
+              </Table>
+            </Section>
+          </Stack.Item>
+          <Stack m={1} mb={0}>
+            <Stack.Item>
+              <Tooltip content="Search" position="bottom">
+                <Icon name="search" mt={0.5} />
+              </Tooltip>
+            </Stack.Item>
+            <Stack.Item grow>
+              <Input
+                fluid
+                value={searchQuery}
+                onInput={(_, value) => setSearchQuery(value)}
+              />
+            </Stack.Item>
+          </Stack>
